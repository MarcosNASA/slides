{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "ES2022", "ESNext.Disposable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2017"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.jsx", "*.mjs"],
  "exclude": ["node_modules", "generated", "*.cjs"],
  "ts-node": {
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "bundler"
    }
  }
}
